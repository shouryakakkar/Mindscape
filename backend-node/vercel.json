{
  "version": 2,
  "name": "mindscape-backend",
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node", "config": { "includeFiles": ["public/**", "media/**"] } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(static|media)/(.*)", "dest": "/api/index.js" },
    { "src": "/", "dest": "/api/index.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}